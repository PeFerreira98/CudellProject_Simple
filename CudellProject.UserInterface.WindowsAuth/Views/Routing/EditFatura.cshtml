@model CudellProject.Data.Models.ViewModels.EditFaturaViewModel

<h4>EditFaturaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFatura" asp-controller="Fatura" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FaturaID" class="control-label"></label>
                <input asp-for="FaturaID" class="form-control" readonly required/>
                <span asp-validation-for="FaturaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" required/>
                <span asp-validation-for="Valor" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor" class="control-label"></label>
                <select asp-for="Fornecedor" asp-items="Model.Fornecedores" class="form-control" required></select>
                <span asp-validation-for="Fornecedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoFatura" class="control-label"></label>
                <select asp-for="EstadoFatura" asp-items="Model.EstadosFatura" class="form-control" required></select>
                <span asp-validation-for="EstadoFatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Table">Back to List</a>
</div>

